#DEPENDS_PATH=$(DEPENDS_PATH)
DEPENDS_PATH=-I../cpp_lib
TARGET=libwwwdll.so
FILTERTEST=filterTest
TEST=posixtest

.PHONY: depends clean

all: $(TARGET)

clean:
	rm -rf $(TARGET) $(FILTERTEST) $(TEST) *.o


$(FILTERTEST): FilterTest.cpp Filter.hpp
	$(CXX) -g -Wall $(DEPENDS_PATH) -o filterTest FilterTest.cpp

$(TARGET): wwwdll.cpp wwwdll.h
	$(CXX) -g -fPIC -Wall -shared -o libwwwdll.so $(DEPENDS_PATH) wwwdll.cpp

$(TEST): posixmain.cpp $(TARGET)
	$(CXX) -g -Wall -Weffc++ $(DEPENDS_PATH) -o $(TEST) posixmain.cpp -L. -lwwwdll -lpthread